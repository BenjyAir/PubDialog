<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_style_0"
        android:text="@string/text_style_0"
        android:layout_width="match_parent"
        android:gravity="center"
        android:onClick="btnClick"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_style_1"
        android:text="@string/text_style_1"
        android:layout_width="match_parent"
        android:gravity="center"
        android:onClick="btnClick"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_style_2"
        android:text="@string/text_style_2"
        android:layout_width="match_parent"
        android:gravity="center"
        android:onClick="btnClick"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_style_3"
        android:text="@string/text_style_3"
        android:layout_width="match_parent"
        android:gravity="center"
        android:onClick="btnClick"
        android:layout_height="wrap_content"/>

</LinearLayout>
